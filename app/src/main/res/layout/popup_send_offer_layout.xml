<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingHorizontal="20dp">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price: "
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/popup_offer_price_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="@+id/textView7" />

    <Button
        android:id="@+id/popup_send_offer_btn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:text="Send Offer"
        app:cornerRadius="50dp"
        app:layout_constraintEnd_toStartOf="@+id/popup_cancleOffer_btn"
        app:layout_constraintTop_toTopOf="@+id/popup_cancleOffer_btn" />

    <Button
        android:id="@+id/popup_cancleOffer_btn"
        style="@style/Theme.MaterialComponents.Light"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/light_grey"
        android:text="cancle"
        android:textColor="@color/black"
        app:cornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="@+id/popup_offer_price_view"
        app:layout_constraintTop_toBottomOf="@+id/popup_offer_price_view" />

</androidx.constraintlayout.widget.ConstraintLayout>